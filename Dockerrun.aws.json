{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "unbounded-lcms",
      "image": "264441468378.dkr.ecr.us-east-1.amazonaws.com/unbounded:lcms-latest",
      "essential": true,
      "memory": 750,
      "links": [
	      "postgres",
	      "elasticsearch",
	      "redis"
      ],
      "portMappings": [
	{
	 "hostPort": 80,
	 "containerPort": 3000
	}
      ]
    },
    {
      "name": "postgres",
      "image": "postgres:alpine",
      "essential": true,
      "memory": 128,
      "environment": [
        {
          "name": "POSTGRES_PASSWORD",
          "value": "unbounded_lcms"
        },
        {
          "name": "POSTGRES_USER",
          "value": "unbounded_lcms"
        },
        {
          "name": "POSTGRES_DB",
          "value": "unbounded_lcms"
        }
      ]
    },
    {
      "name": "elasticsearch",
      "image": "elasticsearch:2-alpine",
      "essential": true,
      "memory": 512,
      "environment": [
        {
          "name": "ES_JAVA_OPTS",
          "value": "-Xms512m -Xmx512m"
        }
      ]
    },
    {
      "name": "redis",
      "image": "redis:alpine",
      "essential": true,
      "memory" : 256
    }
  ]
}
