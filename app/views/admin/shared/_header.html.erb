        <%= link_to root_path, class: 'c-header-title__logo c-header__link' do %>
          <span class="c-header__brand">LCMS</span>
        <% end %>
        <span class="c-header-title__h-menu" data-responsive-toggle="navbar">
          <span class="menu-icon" data-toggle></span>
        </span>
      </div>
      <div class="o-top-bar__wrapper" id="navbar">
        <div class="o-top-bar__item c-header__menu">
          <ul class="dropdown menu" data-dropdown-menu>
            <li class="dropdown c-header__link">
              <%= link_to t('admin.nav.content_guides'), :admin_content_guides %>
              <ul class="menu vertical">
                <%= nav_link t('admin.nav.import_content_guide'), :new_admin_content_guide %>
                <%= nav_link t('admin.nav.glossary'), :admin_content_guide_definitions %>
                <%= nav_link t('admin.nav.import_glossary'), :new_admin_content_guide_definition %>
