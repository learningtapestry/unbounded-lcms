                <%= nav_link t('admin.nav.lessons'), :admin_documents  %>
                <%= nav_link t('admin.nav.materials'), :admin_materials  %>
                <%= nav_link t('admin.nav.batch_reimport'), :new_admin_batch_reimport  %>
              </ul>
            </li>

            <li class="c-header__link">
              <%= link_to t('admin.nav.standards'), :admin_standards %>
            </li>

            <li class="dropdown c-header__link">
              <%= link_to t('admin.nav.users'), :admin_users %>
              <ul class="menu vertical">
                <%= nav_link t('admin.nav.users'), :admin_users %>
                <%= nav_link t('admin.nav.access_codes'), :admin_access_codes %>
              </ul>
            </li>

            <li class="c-header__link">
              <%= link_to t('admin.nav.sign_out'), destroy_user_session_path %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</header>
